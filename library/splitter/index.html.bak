  <script src="jquery.ingeny.splitter.js" type="text/javascript" language="JavaScript"></script>
  <script  type="text/javascript" language="JavaScript">
    $(document).ready(function(){
    
    $("#panes").splitter({
            "defwidth": {
                "left":100,
                "right":200
                        },
            "minwidth": {
                "left":10,
                "right":10
                        },
            "maxwidth": {
                "left":500,
                "right":500
            },
            "collapse":{
                "left":"left",
                "right":"right"
            }
        }); 
    });
    
    $(window).load(function(){
       $(window).resize();
    });
  </script>
  
